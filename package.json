{
  "name": "quench-markdown-editor",
  "displayName": "Quench Markdown Editor",
  "description": "Obsidian-like Live Preview Markdown editor for VS Code (Custom Editor).",
  "icon": "resources/icon.png",
  "sponsor": {
    "url": "https://buymeacoffee.com/harukary7518"
  },
  "version": "0.0.3",
  "publisher": "harukary7518",
  "license": "UNLICENSED",
  "keywords": [
    "markdown",
    "live preview",
    "obsidian",
    "gfm",
    "codemirror",
    "custom editor"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCustomEditor:quench.markdownEditor",
    "onCommand:quench.reloadCss",
    "onCommand:quench.createThemeCss",
    "onCommand:quench.openSettings",
    "onCommand:quench.rebuildWorkspaceIndex",
    "onCommand:quench.insertMarkdownLink",
    "onCommand:quench.insertLinkToHeading",
    "onCommand:quench.insertImageFromFile",
    "onCommand:quench.resizeImage",
    "onCommand:quench.insertEmbed"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "quench.markdownEditor",
        "displayName": "Quench Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "quench.reloadCss",
        "title": "Quench: Reload CSS"
      },
      {
        "command": "quench.createThemeCss",
        "title": "Quench: Create Theme CSS (Workspace)"
      },
      {
        "command": "quench.openSettings",
        "title": "Quench: Open Settings"
      },
      {
        "command": "quench.rebuildWorkspaceIndex",
        "title": "Quench: Rebuild Workspace Index"
      },
      {
        "command": "quench.insertMarkdownLink",
        "title": "Quench: Insert Markdown Link"
      },
      {
        "command": "quench.insertLinkToHeading",
        "title": "Quench: Insert Link to Heading"
      },
      {
        "command": "quench.insertImageFromFile",
        "title": "Quench: Insert Image from File"
      },
      {
        "command": "quench.resizeImage",
        "title": "Quench: Resize Image (GitHub-compatible)"
      },
      {
        "command": "quench.insertEmbed",
        "title": "Quench: Insert Embed (Audio/Video/PDF)"
      }
    ],
    "configuration": {
      "title": "Quench",
      "properties": {
        "quench.theme.autoCreateCss": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "When opening Quench, auto-create .vscode/quench-theme.css if missing, and add it to quench.css.files. (Default: off; use global settings instead.)"
        },
        "quench.css.files": {
          "type": "array",
          "scope": "resource",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of workspace-root-relative CSS file paths (e.g. styles/quench.css)."
        },
        "quench.css.reloadOnSave": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Re-inject CSS into the Webview automatically when CSS files are saved."
        },
        "quench.editor.lineWrapping": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Wrap long lines in Quench editor (CodeMirror line wrapping)."
        },
        "quench.preview.syntaxVisibility": {
          "type": "string",
          "enum": [
            "smart",
            "always",
            "minimal"
          ],
          "default": "smart",
          "description": "Controls how Markdown syntax characters (#, *, `, etc.) are displayed."
        },
        "quench.links.previewOnHover": {
          "type": "boolean",
          "default": true,
          "description": "Show a preview (text excerpt) when hovering a link."
        },
        "quench.links.slugStyle": {
          "type": "string",
          "enum": [
            "github"
          ],
          "default": "github",
          "description": "Heading anchor generation style for links. Currently GitHub-style only."
        },
        "quench.attachments.location": {
          "type": "string",
          "enum": [
            "workspaceRoot",
            "specifiedFolder",
            "sameFolder",
            "subfolder"
          ],
          "default": "subfolder",
          "description": "Attachment location policy."
        },
        "quench.attachments.folderPath": {
          "type": "string",
          "default": "attachments",
          "description": "Save folder for specifiedFolder (workspace-root-relative)."
        },
        "quench.attachments.subfolderName": {
          "type": "string",
          "default": "attachments",
          "description": "Subfolder name for subfolder mode."
        },
        "quench.attachments.naming": {
          "type": "string",
          "enum": [
            "timestamp",
            "noteNameTimestamp"
          ],
          "default": "timestamp",
          "description": "Attachment file naming strategy."
        },
        "quench.security.allowExternalImages": {
          "type": "boolean",
          "default": false,
          "description": "Allow loading external http(s) images (default: off)."
        },
        "quench.security.allowHtmlEmbeds": {
          "type": "boolean",
          "default": false,
          "description": "Allow HTML embeds (audio/video/pdf, etc.) (default: off)."
        },
        "quench.security.allowIframes": {
          "type": "boolean",
          "default": false,
          "description": "Allow iframe embeds (only meaningful when allowHtmlEmbeds is enabled)."
        }
      }
    }
  },
  "scripts": {
    "build:webview": "node scripts/build-webview.mjs",
    "compile": "tsc -p .",
    "build": "npm run build:webview && npm run compile",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run build"
  },
  "dependencies": {
    "github-slugger": "^2.0.0",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@codemirror/lang-markdown": "^6.2.5",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.0",
    "typescript": "^5.5.4"
  }
}
